# ============================================
# Kreeda Hiring Bot - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# AI/ML Configuration
# ============================================
# Required: Your OpenAI API key for AI processing
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# MongoDB Configuration
# ============================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=kreeda_hiring_bot
MONGODB_URI=mongodb://admin:password123@mongodb:27017/kreeda_hiring_bot?authSource=admin

# For local development (outside Docker)
MONGODB_URI_LOCAL=mongodb://admin:password123@localhost:27017/kreeda_hiring_bot?authSource=admin

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=password123

# For local development (outside Docker)
REDIS_HOST_LOCAL=localhost

# ============================================
# Backend Configuration
# ============================================
NODE_ENV=development
PORT=3001
BACKEND_PORT=3001
DISABLE_WORKERS=true

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api
FRONTEND_PORT=3000

# ============================================
# Python Processor Configuration
# ============================================
BACKEND_API_URL=http://backend:3001/api

# ============================================
# Admin UI Credentials
# ============================================
# Mongo Express
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin123
MONGO_EXPRESS_PORT=8081

# Redis Commander
REDIS_COMMANDER_PORT=8082
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# ============================================
# GitHub Token (optional, for development)
# ============================================
GITHUB_TOKEN=your_github_token_here
